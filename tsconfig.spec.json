/* root/tsconfig.spec.json */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false
  },
  "files": ["src/main.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
